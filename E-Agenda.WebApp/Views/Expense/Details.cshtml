@using E_Agenda.WebApp.Models

@model ExpenseDetailsViewModel

<div class="page-header">
    <h2 class="page-title">Detalhes do Contato</h2>
</div>

<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <div class="mb-4">
                    <h3 class="mb-3">Informações</h3>
                    <div class="row mb-2">
                        <div class="col-4 fw-semibold">Id:</div>
                        <div class="col-8">@Model.Id</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 fw-semibold">Descrição:</div>
                        <div class="col-8">@Model.Description</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 fw-semibold">Data:</div>
                        <div class="col-8">@Model.OccurrenceDate.ToString()</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 fw-semibold">Valor:</div>
                        <div class="col-8">@Model.Value</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 fw-semibold">Forma de Pagamento:</div>
                        <div class="col-8">@Model.PaymentMethod</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 fw-semibold">Categoria:</div>
                        <div class="col-8">@string.Join(", ", Model.Categories)</div>
                    </div>
                </div>
                <div class="d-flex justify-content-end gap-3 mt-4">
                    <a href="/contacts" class="btn btn-secondary">Voltar para a listagem</a>
                </div>
            </div>
        </div>
    </div>
</div>