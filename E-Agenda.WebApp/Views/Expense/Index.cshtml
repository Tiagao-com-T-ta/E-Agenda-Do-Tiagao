@using E_Agenda.WebApp.Models
@model VisualizeExpensesViewModel

@{
    ViewData["Title"] = "Expenses List";
}

<h1 class="text-2xl font-bold mb-4">Expenses</h1>

<a asp-action="Create" class="btn btn-primary mb-4">+ Add New Expense</a>

<table class="table table-striped table-hover w-full border-collapse border border-gray-300">
    <thead class="bg-gray-100">
        <tr>
            <th>Description</th>
            <th>Occurrence Date</th>
            <th>Value</th>
            <th>Payment Method</th>
            <th>Categories</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Records != null && Model.Records.Any())
        {
            foreach (var expense in Model.Records)
            {
                <tr>
                    <td>@expense.Description</td>
                    <td>@expense.OccurrenceDate.ToString("dd/MM/yyyy")</td>
                    <td>@expense.Value.ToString("C")</td>
                    <td>@expense.PaymentMethod</td>
                    <td>
                        @if (expense.Categories != null && expense.Categories.Count > 0)
                        {
                            <ul class="list-disc list-inside">
                                @foreach (var category in expense.Categories)
                                {
                                    <li>@category</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-gray-500">No categories</span>
                        }
                    </td>
                    <td class="text-center space-x-2">
                        <a asp-action="Edit" asp-route-id="@expense.Id" class="text-blue-600">Edit</a>
                        <a asp-action="Details" asp-route-id="@expense.Id" class="text-green-600">Details</a>
                        <a asp-action="Delete" asp-route-id="@expense.Id" class="text-red-600">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-gray-500 p-4">No expenses registered.</td>
            </tr>
        }
    </tbody>
</table>
