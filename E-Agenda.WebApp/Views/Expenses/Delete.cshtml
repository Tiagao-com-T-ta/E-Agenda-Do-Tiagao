@using E_Agenda.WebApp.Models
@model DeleteExpensesViewModels

@{
    Layout = "_Layout";
    ViewBag.Title = "Excluir uma Despesa";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Formulário de Exclusão</h3>

                <form asp-action="Delete" asp-route-id="@Model.Id">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <p class="mt-4">Você deseja realmente excluir "@Model.Description"?</p>
                    <div class="form-group d-flex align-items-center justify-content-end gap-3">
                        <a href="/contacts">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-danger px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>