@using E_Agenda.WebApp.Models

@model AppointmentDetailsViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Detalhes do Compromisso";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">

        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Detalhes</h3>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Id" class="control-label fs-5">Id:</label>
                    <input name="Id" class="form-control" value="@Model.Id" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Topic" class="control-label fs-5">Assunto:</label>
                    <input name="Topic" class="form-control" value="@Model.Topic" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Date" class="control-label fs-5">Data:</label>
                    <input name="Date" class="form-control" value="@Model.Date" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="StartTime" class="control-label fs-5">Horario de Início:</label>
                    <input name="StartTime" class="form-control" value="@Model.StartTime" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="EndTime" class="control-label fs-5">Horario de Termino:</label>
                    <input name="EndTime" class="form-control" value="@Model.EndTime" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Type" class="control-label fs-5">Tipo:</label>
                    <input name="Type" class="form-control" value="@Model.Type" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Location" class="control-label fs-5">Local:</label>
                    <input name="Location" class="form-control" value="@Model.Location" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Link" class="control-label fs-5">Link:</label>
                    <input name="Link" class="form-control" value="@Model.Link" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Contact" class="control-label fs-5">Contato:</label>
                    <input name="Contact" class="form-control" value="@Model.Contact" readonly disabled />
                </div>
                <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                    <a href="/appointments">Voltar para a listagem</a>
                </div>
            </div>
        </div>


    </div>
</div>
