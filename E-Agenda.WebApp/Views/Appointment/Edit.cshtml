@using E_Agenda.WebApp.Models

@model EditAppointmentViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Editar Compromisso";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <form asp-action="Edit" asp-route-id="@Model.Id">
                    <h3>Formulário de Edição</h3>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Topic" class="control-label fs-5">Assunto:</label>
                        <input asp-for="Topic" class="form-control" value="@Model.Topic" />
                        <span asp-validation-for="Topic" class="text-danger"></span>

                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Date" class="control-label fs-5">Data:</label>
                        <input asp-for="Date" class="form-control" value="@Model.Date" />
                        <span asp-validation-for="Date" class="text-danger"></span>

                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="StartTime" class="control-label fs-5">Horario de Inicio:</label>
                        <input asp-for="StartTime" class="form-control" value="@Model.StartTime" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>

                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="EndTime" class="control-label fs-5">Horario de Termino:</label>
                        <input asp-for="EndTime" class="form-control" value="@Model.EndTime" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>

                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Type" class="control-label fs-5">Type:</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Type" id="Presencial" value="Presencial" checked onclick="updateFields()">
                            <label class="form-check-label" for="Presencial">Presencial</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Type" id="online" value="Online" onclick="updateFields()">
                            <label class="form-check-label" for="online">Online</label>
                        </div>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Location" class="control-label fs-5">Localização:</label>
                        <input asp-for="Location" class="form-control" value="@Model.Location" />

                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Link" class="control-label fs-5">Link:</label>
                        <input asp-for="Link" class="form-control" value="@Model.Link" />

                    </div>
                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a href="/appointments">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-primary rounded-3 px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}