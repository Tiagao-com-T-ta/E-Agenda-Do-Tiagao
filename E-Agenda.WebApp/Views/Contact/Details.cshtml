@using E_Agenda.WebApp.Models
@model ContactDetailsViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Detalhes do Contato";
}

<div class="page-header">
    <h2 class="page-title">Detalhes do Contato</h2>
</div>

<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <div class="mb-4">
                    <h3 class="mb-3">Informações</h3>
                    <div class="row mb-2">
                        <div class="col-4 fw-semibold">Id:</div>
                        <div class="col-8">@Model.Id</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 fw-semibold">Nome:</div>
                        <div class="col-8">@Model.Name</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 fw-semibold">Email:</div>
                        <div class="col-8">@Model.Email</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 fw-semibold">Telefone:</div>
                        <div class="col-8">@Model.Telephone</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 fw-semibold">Cargo:</div>
                        <div class="col-8">@Model.Role</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 fw-semibold">Empresa:</div>
                        <div class="col-8">@Model.Company</div>
                    </div>
                </div>
                <div class="d-flex justify-content-end gap-3 mt-4">
                    <a href="/contacts" class="btn btn-secondary">Voltar para a listagem</a>
                </div>
            </div>
        </div>
    </div>
</div>

