@using E_Agenda.WebApp.Models
@model ViewCategoriesViewModel

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

<a asp-action="Register" class="btn btn-primary mb-3">Create New Category</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Number of Expenses</th>
            <th>Total Expenses</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Records)
        {
            <tr>
                <td>@category.Title</td>
                <td>@category.Expenses.Count</td>
                <td>@category.TotalExpenses.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>