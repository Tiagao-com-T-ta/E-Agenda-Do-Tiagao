@model TaskManagement.WebApp.ViewModels.TaskDetailsViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Exclusão de Tarefa";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Formulário de Exclusão</h3>
                @if (ViewBag.Erro != null)
                {
                    <div class="alert alert-danger mt-3">
                        @ViewBag.Erro
                    </div>
                }
                <p class="mt-4">Você deseja realmente excluir a tarefa "@Model.Title"?</p>
                <p><strong>Prioridade:</strong> @Model.Priority</p>
                <p><strong>Status:</strong> @(Model.IsCompleted ? "Completa" : "Pendente")</p>

                <form asp-action="ExcluirConfirmado" asp-route-id="@Model.Id" method="post">
                    <div class="form-group d-flex align-items-center justify-content-end gap-3">
                        <a href="/tasks">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-danger px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>