@using TaskManagement.WebApp.ViewModels
@model TaskListViewModel

@{
    ViewBag.Title = "Lista de Tarefas";
}

<h2>Lista de Tarefas</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Cadastrar", "Tasks")">
        <i class="bi bi-plus"></i> Nova Tarefa
    </a>
</p>

@if (Model.Tasks == null || Model.Tasks.Count == 0)
{
    <div class="alert alert-info">
        Nenhuma tarefa cadastrada.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Título</th>
                <th>Prioridade</th>
                <th>Status</th>
                <th>% Conclusão</th>
                <th>Data Criação</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarefa in Model.Tasks)
            {
                <tr>
                    <td>@tarefa.Title</td>
                    <td>@tarefa.Priority.ToString()</td>
                    <td>
                        @if (tarefa.IsCompleted)
                        {
                            <span class="badge bg-success">Concluído</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pendente</span>
                        }
                    </td>
                    <td>@($"{tarefa.CompletionPercentage:0}%")</td>
                    <td>@tarefa.CreationDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a class="btn btn-sm btn-info" href="@Url.Action("Detalhes", "Tasks", new { id = tarefa.Id })" title="Detalhes">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a class="btn btn-sm btn-warning" href="@Url.Action("Editar", "Tasks", new { id = tarefa.Id })" title="Editar">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Excluir", "Tasks", new { id = tarefa.Id })" title="Excluir">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
